{
    "connect": {
        "dir": "dist/",
        "files": [
            "dist/js/bundle.js",
            "dist/js/bundle.min.js",
            "dist/css/styles.css",
            "dist/css/styles.min.css",
            "dist/index.html"
        ]
    },
    "scripts": {
        "entry": "src/js/index.js",
        "dest": "dist/js/",
        "bundle": "bundle.js",
        "lint": [
            "src/js/**/*.js",
            "tasks/**/*.js"
        ]
    },
    "styles": {
        "entry": "src/css/index.css",
        "dest": "dist/css/",
        "bundle": "styles.css",
        "watch": "./src/css/**/*.css",
        "lint": [
            "src/css/**/*.css",
            "!src/css/index.css"
        ]
    }
}
